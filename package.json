{
  "name": "social-media-clone-mern",
  "version": "1.0.0",
  "description": "this social media clone app using mern stack",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "cd client && npm run dev",
    "server-install": "npm install",
    "client-install": "cd client && npm install",
    "install-all": "concurrently \"npm run server\" \"npm run client\" ",
    "dev": "concurrently \"npm run server\" \"npm run client\" ",
    "build": "cd client && npm install && npm run build"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "nodemon": "^2.0.20"
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "concurrently": "^7.6.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.7.3",
    "peer": "^0.6.1",
    "socket.io": "^4.5.4"
  }
}